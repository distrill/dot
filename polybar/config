label-discharging = %percentage%%
label-charging-underline = ${colors.less-green}
label-discharging-underline = ${colors.less-green}
label-full-underline = ${colors.less-green}

[module/date]
type = internal/date
interval = 1.0
time = "%H:%M"
label = %date% %time%
format-underline = ${colors.yellow}
