! vim movements  
keycode 66 = Mode_switch
keysym h = h H Left
keysym l = l L Right
keysym k = k K Up
keysym j = j J Down
keysym BackSpace = BackSpace BackSpace Delete

! swap meta and alt keys
keycode 64 = Alt_L
keycode 133 = Super_L
remove Mod1 = Alt_L
remove Mod4 = Super_L
add Mod1 = Super_L
add Mod4 = Alt_L

! move escape to tilde
! keycode 49 = Escape Mode_switch
! keysym Escape = Escape
! keysym Mode_switch = grave asciitilde
